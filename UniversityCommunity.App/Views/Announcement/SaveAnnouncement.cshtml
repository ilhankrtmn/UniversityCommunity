@model UniversityCommunity.Data.EntityFramework.Entities.Announcement;

@{
    ViewData["Title"] = "SaveAnnouncement";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@using System;
@using System.Linq;

<title>Duyurular</title>
<section class="main-content-w3layouts-agileits center-form">
    <div class="container form-container">
        <h3 class="tittle text-center">Duyuru</h3>
        <div class="inner-sec">
            <div class="section-header">
                @using (Html.BeginForm("SaveAnnouncement", "Announcement", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return Validate(this);", onkeydown = "return event.key != 'Enter';" }))
                {
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.CreatedDate)
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label for="validationCustom01">Görsel Url</label>
                            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", required = "required", autocomplete = "off" } })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label for="validationCustom01">Başlık</label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", required = "required", autocomplete = "off" } })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label for="validationCustom01">Açıklama</label>
                            @Html.TextAreaFor(model => model.Description, new
                                {
                                    @class = "maxlength-textarea form-control",
                                    @data_placement = "bottom-right-inside",
                                    data_plugin = "maxlength",
                                    maxlength = "2000",
                                    minlength = "150",
                                    rows = "5",
                                    placeholder = "Max 2000 chars.",
                                    required = "required",
                                    contenteditable = "true"
                                })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="exampleInputPassword1 mb-2">Durum</label>
                            @Html.CheckBoxFor(model => model.Status, new { @class = "to-labelauty", name = "Status", data_plugin = "labelauty", data_labelauty = "No|Yes" })

                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">İşlemi Kaydet</button>
                }
            </div>
        </div>
    </div>
</section>