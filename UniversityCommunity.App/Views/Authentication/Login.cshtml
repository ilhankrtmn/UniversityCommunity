@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@model UserLoginBody;
@using System;
@using System.Linq;

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Giriş Yap</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "return Validate(this);", onkeydown = "return event.key != 'Enter';" }))
                {
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Mail Adresi</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", required = "required", autocomplete = "off", type = "email" } })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required", autocomplete = "off", type = "password", id = "password1" } })
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a href="@Url.Action("SendOtp", "Authentication")">Şifrenizi mi unuttunuz?</a></p>
                }
            </div>
        </div>
    </div>
</section>